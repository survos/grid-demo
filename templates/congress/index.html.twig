{% extends 'base.html.twig' %}

{% block title %}Official index{% endblock %}

{% block body %}
    <h1>Official index</h1>

    {% component grid with {
        data: officials,
        columns: ['id', 'officialName']|merge(is_granted('ROLE_ADMIN')?['actions']:['birthday'])
    } %}

        {% block officialName %}
        <a href="{{ path('app_congress_show', {'id': row.id}) }}">
            {{ row.officialName }}
        </a>
        {% endblock %}

        {% block birthday %}
            {{ row.birthday|date('Y-m-d') }}
        {% endblock %}

        {% block actions %}
            <a href="{{ path('app_congress_edit', {'id': row.id}) }}">edit</a>
        {% endblock %}

    {% endcomponent %}

    <table class="table" {{ stimulus_controller('@survos/datatables-bundle/datatables') }}>
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>OfficialName</th>
                <th>Birthday</th>
                <th>Gender</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for official in officials %}
            <tr>
                <td>{{ official.id }}</td>
                <td>{{ official.firstName }}</td>
                <td>{{ official.lastName }}</td>
                <td>{{ official.officialName }}</td>
                <td>{{ official.birthday ? official.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ official.gender }}</td>
                <td>
                    <a href="{{ path('app_congress_show', {'id': official.id}) }}">show</a>
                    <a href="{{ path('app_congress_edit', {'id': official.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_congress_new') }}">Create new</a>
{% endblock %}
